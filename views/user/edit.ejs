  <div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img style="width:200px; height:200px;" src="../images/avatar/<%= userobj.fd %>" class="avatar img-circle" alt="avatar">
          <form action="updatea" method="post" enctype="multipart/form-data">
          <h6>Upload a different photo...</h6>
          <input type="hidden" name="uploads" value="uploads" />
          <input type="file" name="fileup" class="form-control">
          <input type="submit" name="submit" value="uploaded" /> 
          <input type="hidden" name="_csrf" value="<%= _csrf %>" /> <!-- upfile  savech -->
        </div>
        </form>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">×</a> 
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Use this to show important messages to the user.
        </div>
        <h3>Personal info</h3>
        
        <form action="updated" method="post" class="form-horizontal" role="form">
          <div class="form-group">
            <label class="col-lg-3 control-label">Name:</label>
            
            <div class="col-lg-8">
              <input name="name" class="form-control" type="text" value="<%= userobj.name %>">
            </div>
          </div>
          
          <div class="form-group">
            <label class="col-md-3 control-label">Address:</label>
            <div class="col-md-8">
              <input name="address" class="form-control" type="text" value="<%= userobj.address %>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">State:</label>
            <div class="col-md-8">
              <input name="state" class="form-control" type="text" value="<%= userobj.state %>">
            </div>
          </div>          <div class="form-group">
            <label class="col-md-3 control-label">Country:</label>
            <div class="col-md-8">
              <input name="country" class="form-control" type="text" value="<%= userobj.country %>">
            </div>
          </div>          <div class="form-group">
            <label class="col-md-3 control-label">Pin:</label>
            <div class="col-md-8">
              <input name="pin" class="form-control" type="text" value="<%= userobj.pin %>">
            </div>
          </div>          <div class="form-group">
            <label class="col-md-3 control-label">Phone:</label>
            <div class="col-md-8">
              <input name="phone" class="form-control" type="text" value="<%= userobj.phone %>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Old Password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password" name="oldpassword" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">New password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password" name="password" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" name="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
